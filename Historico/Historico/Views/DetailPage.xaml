    <?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Historico.Views.DetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalhe"
    Shell.NavBarIsVisible="False"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *">
            <Grid BackgroundColor="#2F80ED" Padding="12" Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="8" Grid.Column="0">
                    <Label Text="◀" VerticalOptions="Center" FontSize="20" TextColor="White">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnBackTapped" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Text="voltar" VerticalOptions="Center" FontSize="18" TextColor="White" />
                </StackLayout>

            </Grid>

            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="14" Spacing="12">
                    <Label Text="{Binding Title}" Style="{StaticResource PageTitle}" HorizontalTextAlignment="Start" />

                    <BoxView HeightRequest="1" Color="#999" Margin="0,0,0,6" />

                    <Label Text="1º Passo" FontSize="20" FontAttributes="Bold" TextColor="#2F80ED" />
                    <Label Text="{Binding Subtitle}" FontSize="14" />

                    <Frame CornerRadius="20" Padding="8" HasShadow="True" VerticalOptions="Start" HorizontalOptions="Start">
                        <Image Source="{Binding Image}" Aspect="AspectFill" HeightRequest="360" WidthRequest="200" />
                    </Frame>

                    <Label Text="{Binding Content}" FontSize="14" />
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
